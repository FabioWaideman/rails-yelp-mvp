<h1>Restaurants</h1>

<%= link_to "Add a New Restaurant", new_restaurant_path, class: "btn btn-primary" %>


<div class="row d-flex">
<% @restaurants.each do |restaurant| %>
  <div class="card m-3" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category%></h6>
      <p class="card-text"><%= restaurant.phone_number %></p>
      <%= link_to 'View More', restaurant_path(restaurant), class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
</div>
